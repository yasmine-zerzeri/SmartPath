{% extends 'public/base.html.twig' %}

{% block title %}SmartPath - Contact{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .contact-hero {
        padding: 4rem 2rem;
        text-align: center;
        animation: fadeInUp 0.8s ease-out;
    }
    
    .contact-hero h1 {
        font-size: 3.5rem;
        background: linear-gradient(135deg, #60a5fa 0%, #93c5fd 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 1.5rem;
        font-weight: 700;
        filter: drop-shadow(0 0 30px rgba(96, 165, 250, 0.5));
    }
    
    body.light-mode .contact-hero h1 {
        background: linear-gradient(135deg, #0284c7 0%, #0369a1 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        filter: drop-shadow(0 0 15px rgba(14, 165, 233, 0.3));
    }
    
    .contact-hero p {
        font-size: 1.3rem;
        color: #bfdbfe;
        max-width: 700px;
        margin: 0 auto;
        line-height: 1.8;
    }
    
    body.light-mode .contact-hero p {
        color: #0c4a6e;
        font-weight: 500;
    }
    
    .contact-section {
        padding: 4rem 2rem;
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .contact-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
        margin-top: 2rem;
    }
    
    .contact-form {
        background: rgba(10, 22, 40, 0.8);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(96, 165, 250, 0.3);
        border-radius: 20px;
        padding: 3rem;
    }
    
    body.light-mode .contact-form {
        background: rgba(255, 255, 255, 0.9);
        border-color: rgba(3, 105, 161, 0.2);
        box-shadow: 0 4px 20px rgba(14, 165, 233, 0.1);
    }
    
    .contact-form h2 {
        font-size: 2rem;
        background: linear-gradient(135deg, #60a5fa 0%, #93c5fd 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin-bottom: 2rem;
        font-weight: 600;
    }
    
    body.light-mode .contact-form h2 {
        background: linear-gradient(135deg, #0284c7 0%, #0ea5e9 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .form-group {
        margin-bottom: 1.5rem;
    }
    
    .form-group label {
        display: block;
        color: #93c5fd;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }
    
    body.light-mode .form-group label {
        color: #0284c7;
    }
    
    .form-group input,
    .form-group textarea {
        width: 100%;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(96, 165, 250, 0.3);
        border-radius: 10px;
        color: white;
        font-family: 'Poppins', sans-serif;
        font-size: 1rem;
        transition: all 0.3s ease;
    }
    
    body.light-mode .form-group input,
    body.light-mode .form-group textarea {
        background: white;
        border-color: rgba(3, 105, 161, 0.3);
        color: #0f172a;
    }
    
    .form-group input:focus,
    .form-group textarea:focus {
        outline: none;
        border-color: #60a5fa;
        box-shadow: 0 0 0 3px rgba(96, 165, 250, 0.1);
    }
    
    body.light-mode .form-group input:focus,
    body.light-mode .form-group textarea:focus {
        border-color: #0284c7;
        box-shadow: 0 0 0 3px rgba(14, 165, 233, 0.1);
    }
    
    .form-group textarea {
        resize: vertical;
        min-height: 150px;
    }
    
    .submit-btn {
        width: 100%;
        padding: 1rem 2rem;
        background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
        color: white;
        border: none;
        border-radius: 50px;
        font-weight: 600;
        font-size: 1.1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 10px 30px rgba(220, 38, 38, 0.4);
        animation: pulse-btn 2s infinite;
    }
    
    .submit-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(220, 38, 38, 0.6);
    }
    
    @keyframes pulse-btn {
        0%, 100% {
            box-shadow: 0 10px 30px rgba(220, 38, 38, 0.4);
        }
        50% {
            box-shadow: 0 10px 35px rgba(220, 38, 38, 0.6);
        }
    }
    
    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    
    .info-card {
        background: rgba(10, 22, 40, 0.8);
        backdrop-filter: blur(15px);
        border: 1px solid rgba(96, 165, 250, 0.3);
        border-radius: 20px;
        padding: 2rem;
        transition: all 0.3s ease;
    }
    
    body.light-mode .info-card {
        background: rgba(255, 255, 255, 0.9);
        border-color: rgba(3, 105, 161, 0.2);
        box-shadow: 0 4px 20px rgba(14, 165, 233, 0.1);
    }
    
    .info-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 40px rgba(59, 130, 246, 0.3);
    }
    
    .info-card-icon {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        display: block;
        animation: float-icon 2.5s ease-in-out infinite;
    }
    
    @keyframes float-icon {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-8px); }
    }
    
    .info-card h3 {
        color: #93c5fd;
        font-size: 1.3rem;
        margin-bottom: 0.8rem;
        font-weight: 600;
    }
    
    body.light-mode .info-card h3 {
        color: #0284c7;
    }
    
    .info-card p {
        color: #bfdbfe;
        line-height: 1.6;
    }
    
    body.light-mode .info-card p {
        color: #334155;
    }
    
    .info-card a {
        color: #60a5fa;
        text-decoration: none;
        transition: color 0.3s ease;
    }
    
    body.light-mode .info-card a {
        color: #0369a1;
    }
    
    .info-card a:hover {
        color: #93c5fd;
    }
    
    @media (max-width: 968px) {
        .contact-hero h1 {
            font-size: 2.5rem;
        }
        
        .contact-container {
            grid-template-columns: 1fr;
        }
        
        .contact-form {
            padding: 2rem;
        }
    }
</style>
{% endblock %}

