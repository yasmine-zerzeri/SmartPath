{% extends 'public/base.html.twig' %}

{% block title %}Quiz - SmartPath{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-header {
            background: rgba(10, 22, 40, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(96, 165, 250, 0.3);
            border-radius: 20px;
            padding: 3rem 2rem;
            box-shadow: 0 8px 32px rgba(37, 99, 235, 0.3);
            margin-bottom: 3rem;
            text-align: center;
            animation: fadeInUp 0.6s ease-out;
            position: relative;
            overflow: hidden;
            transition: all 0.5s ease;
        }
        
        body.light-mode .page-header {
            background: rgba(255, 255, 255, 0.95);
            border: 2px solid rgba(3, 105, 161, 0.3);
            box-shadow: 0 4px 25px rgba(14, 165, 233, 0.2);
        }
        
        .page-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(96, 165, 250, 0.1), transparent);
            animation: shine 3s infinite;
        }
        
        @keyframes shine {
            0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
            100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
        }
        
        .page-header h2 {
            color: #e0f2fe;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            position: relative;
            z-index: 1;
            background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            filter: drop-shadow(0 0 30px rgba(96, 165, 250, 0.5));
            transition: all 0.5s ease;
        }
        
        body.light-mode .page-header h2 {
            background: linear-gradient(135deg, #0284c7 0%, #0369a1 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            filter: drop-shadow(0 0 15px rgba(14, 165, 233, 0.3));
        }
        
        .page-header p {
            color: #bfdbfe;
            font-size: 1.1rem;
            position: relative;
            z-index: 1;
            transition: color 0.5s ease;
        }
        
        body.light-mode .page-header p {
            color: #0c4a6e;
            font-weight: 500;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-top: 1.5rem;
        }
        
        .stat-box {
            background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
            color: white;
            padding: 1.5rem;
            border-radius: 15px;
            text-align: center;
            box-shadow: 0 4px 20px rgba(37, 99, 235, 0.4);
            position: relative;
            z-index: 1;
            transition: all 0.5s ease;
        }
        
        body.light-mode .stat-box {
            background: linear-gradient(135deg, #0ea5e9 0%, #38bdf8 100%);
            box-shadow: 0 3px 18px rgba(14, 165, 233, 0.3);
        }
        
        .stat-box h4 {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }
        
        .stat-box p {
            color: rgba(255,255,255,0.9);
            font-size: 0.9rem;
        }
        
        .quiz-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }
        
        .quiz-card {
            background: rgba(10, 22, 40, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(96, 165, 250, 0.2);
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            cursor: pointer;
            border-left: 5px solid #3b82f6;
            animation: fadeInUp 0.6s ease-out backwards;
            position: relative;
            overflow: hidden;
        }
        
        body.light-mode .quiz-card {
            background: rgba(255, 255, 255, 0.95);
            border: 2px solid rgba(3, 105, 161, 0.2);
            border-left: 5px solid #0ea5e9;
            box-shadow: 0 4px 20px rgba(14, 165, 233, 0.15);
        }
        
        .quiz-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
            opacity: 0;
            transition: opacity 0.4s ease;
            z-index: 0;
        }
        
        body.light-mode .quiz-card::before {
            background: linear-gradient(135deg, #0ea5e9 0%, #38bdf8 100%);
        }
        
        .quiz-card:hover::before {
            opacity: 0.1;
        }
        
        .quiz-card > * {
            position: relative;
            z-index: 1;
        }
        
        .quiz-card:nth-child(1) { animation-delay: 0.1s; }
        .quiz-card:nth-child(2) { animation-delay: 0.2s; }
        .quiz-card:nth-child(3) { animation-delay: 0.3s; }
        .quiz-card:nth-child(4) { animation-delay: 0.4s; }
        .quiz-card:nth-child(5) { animation-delay: 0.5s; }
        .quiz-card:nth-child(6) { animation-delay: 0.6s; }
        
        .quiz-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 15px 40px rgba(37, 99, 235, 0.5);
            border-left-color: #60a5fa;
        }
        
        body.light-mode .quiz-card:hover {
            box-shadow: 0 10px 35px rgba(14, 165, 233, 0.35);
            border-left-color: #0284c7;
        }
        
        /* Animation float pour les ic√¥nes (mouvement vertical simple) */
        @keyframes float-icon {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-8px);
            }
        }
        
        .quiz-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 0 20px rgba(37, 99, 235, 0.5);
            transition: all 0.5s ease;
            /* Animation douce et continue */
            animation: float-icon 2.5s ease-in-out infinite;
        }
        
        body.light-mode .quiz-icon {
            background: linear-gradient(135deg, #0ea5e9 0%, #38bdf8 100%);
            box-shadow: 0 0 15px rgba(14, 165, 233, 0.4);
        }
        
        .quiz-card h3 {
            background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
            font-size: 1.3rem;
            font-weight: 600;
            transition: all 0.5s ease;
        }
        
        body.light-mode .quiz-card h3 {
            background: linear-gradient(135deg, #0284c7 0%, #0369a1 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .quiz-card p {
            color: #bfdbfe;
            line-height: 1.7;
            margin-bottom: 1rem;
            transition: color 0.5s ease;
        }
        
        body.light-mode .quiz-card p {
            color: #334155;
            font-weight: 400;
        }
        
        .quiz-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid rgba(96, 165, 250, 0.2);
        }
        
        .quiz-questions {
            background: rgba(37, 99, 235, 0.2);
            padding: 0.3rem 0.8rem;
            border-radius: 20px;
            font-size: 0.85rem;
            color: #93c5fd;
            transition: all 0.5s ease;
        }
        
        body.light-mode .quiz-questions {
            background: rgba(14, 165, 233, 0.15);
            color: #0369a1;
            font-weight: 600;
        }
        
        .quiz-difficulty {
            display: flex;
            gap: 0.3rem;
        }
        
        .difficulty-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: rgba(96, 165, 250, 0.2);
            transition: all 0.5s ease;
        }
        
        body.light-mode .difficulty-dot {
            background: rgba(3, 105, 161, 0.25);
        }
        
        .difficulty-dot.active {
            background: #3b82f6;
            box-shadow: 0 0 8px #3b82f6;
        }
        
        body.light-mode .difficulty-dot.active {
            background: #0ea5e9;
            box-shadow: 0 0 6px #0ea5e9;
        }
        
        .quiz-score {
            background: linear-gradient(135deg, #16a34a 0%, #22c55e 100%);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
            box-shadow: 0 4px 15px rgba(22, 163, 74, 0.4);
        }
    </style>
{% endblock %}

