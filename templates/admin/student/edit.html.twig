{% extends 'admin/base_admin.html.twig' %}

{% block title %}Modifier un étudiant - SmartPath{% endblock %}

{% block page_title %}Modifier l'Étudiant #{{ student.id }}{% endblock %}

{% block admin_content %}
    <div class="card">
        <h3>Formulaire de Modification</h3>
        
        {# Désactiver la validation HTML5 pour tester la validation Symfony côté serveur #}
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        
        <div class="form-group">
            {{ form_label(form.nsc, "Numéro d'inscription") }}
            {{ form_widget(form.nsc) }}
            {{ form_errors(form.nsc) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
            {{ form_errors(form.email) }}
        </div>
        
        <div class="form-actions">
            {{ form_widget(form.submit, {'label': 'Mettre à jour'}) }}
            <a href="{{ path('admin_student_index') }}" class="btn btn-secondary">
                Annuler
            </a>
        </div>
        
        {{ form_end(form) }}
    </div>
{% endblock %}
