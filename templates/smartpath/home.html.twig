{% extends 'dashboard_base.html.twig' %}

{% block title %}Accueil - SmartPath{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Welcome Banner */
        .welcome-banner {
            background: linear-gradient(135deg, rgba(37, 99, 235, 0.15) 0%, rgba(59, 130, 246, 0.1) 100%);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(96, 165, 250, 0.3);
            border-radius: 25px;
            padding: 3rem;
            margin-bottom: 3rem;
            position: relative;
            overflow: hidden;
            animation: fadeInUp 0.6s ease-out;
        }
        
        body.light-mode .welcome-banner {
            background: linear-gradient(135deg, rgba(14, 165, 233, 0.1) 0%, rgba(56, 189, 248, 0.05) 100%);
            border: 1px solid rgba(3, 105, 161, 0.3);
        }
        
        .welcome-banner::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -20%;
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(96, 165, 250, 0.2) 0%, transparent 70%);
            border-radius: 50%;
            animation: pulse-glow-slow 4s infinite;
        }
        
        @keyframes pulse-glow-slow {
            0%, 100% { transform: scale(1); opacity: 0.5; }
            50% { transform: scale(1.2); opacity: 0.8; }
        }
        
        .welcome-content {
            position: relative;
            z-index: 1;
            display: grid;
            grid-template-columns: 1fr auto;
            gap: 2rem;
            align-items: center;
        }
        
        .welcome-text h1 {
            font-size: 2.5rem;
            background: linear-gradient(135deg, #60a5fa 0%, #93c5fd 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1rem;
            font-weight: 700;
            filter: drop-shadow(0 0 20px rgba(96, 165, 250, 0.5));
        }
        
        body.light-mode .welcome-text h1 {
            background: linear-gradient(135deg, #0284c7 0%, #0369a1 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            filter: drop-shadow(0 0 15px rgba(14, 165, 233, 0.3));
        }
        
        .welcome-text p {
            color: #bfdbfe;
            font-size: 1.2rem;
            line-height: 1.8;
        }
        
        body.light-mode .welcome-text p {
            color: #0369a1;
        }
        
        .welcome-illustration {
            width: 200px;
            height: 200px;
            background: url('https://images.unsplash.com/photo-1522202176988-66273c2fd55f?w=400&h=400&fit=crop') center/cover;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(96, 165, 250, 0.3);
            animation: float-image 6s ease-in-out infinite;
        }
        
        body.light-mode .welcome-illustration {
            box-shadow: 0 10px 40px rgba(14, 165, 233, 0.2);
        }
        
        @keyframes float-image {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-15px); }
        }
        
        /* Quick Actions Cards */
        .quick-actions {
            margin-bottom: 3rem;
            animation: fadeInUp 0.8s ease-out;
        }
        
        .section-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 2rem;
        }
        
        .section-header h2 {
            font-size: 1.8rem;
            background: linear-gradient(135deg, #60a5fa 0%, #93c5fd 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-weight: 600;
        }
        
        body.light-mode .section-header h2 {
            background: linear-gradient(135deg, #0284c7 0%, #0369a1 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .section-header::after {
            flex: 1;
            content: '';
            height: 2px;
            background: linear-gradient(90deg, rgba(96, 165, 250, 0.5), transparent);
        }
        
        body.light-mode .section-header::after {
            background: linear-gradient(90deg, rgba(3, 105, 161, 0.5), transparent);
        }
        
        .actions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 2rem;
        }
        
        .action-card {
            background: rgba(10, 22, 40, 0.8);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(96, 165, 250, 0.3);
            border-radius: 20px;
            padding: 2rem;
            text-decoration: none;
            color: inherit;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }
        
        body.light-mode .action-card {
            background: rgba(255, 255, 255, 0.9);
            border: 1px solid rgba(3, 105, 161, 0.3);
        }
        
        .action-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(135deg, #60a5fa 0%, #93c5fd 100%);
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }
        
        body.light-mode .action-card::before {
            background: linear-gradient(135deg, #0284c7 0%, #0ea5e9 100%);
        }
        
        .action-card:hover::before {
            transform: scaleX(1);
        }
        
        .action-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 50px rgba(96, 165, 250, 0.4);
            border-color: #60a5fa;
        }
        
        body.light-mode .action-card:hover {
            box-shadow: 0 20px 50px rgba(14, 165, 233, 0.3);
            border-color: #0284c7;
        }
        
        .action-card-image {
            width: 100%;
            height: 150px;
            background-size: cover;
            background-position: center;
            border-radius: 15px;
            margin-bottom: 1rem;
            position: relative;
            overflow: hidden;
        }
        
        .action-card-image::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, rgba(37, 99, 235, 0.3) 0%, transparent 100%);
        }
        
        .action-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
            filter: drop-shadow(0 0 10px rgba(96, 165, 250, 0.6));
            animation: icon-float 3s ease-in-out infinite;
        }
        
        @keyframes icon-float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }
        
        .action-card h3 {
            color: #93c5fd;
            font-size: 1.4rem;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }
        
        body.light-mode .action-card h3 {
            color: #0284c7;
        }
        
        .action-card p {
            color: #bfdbfe;
            font-size: 0.95rem;
            line-height: 1.6;
        }
        
        body.light-mode .action-card p {
            color: #0369a1;
        }
        
        .action-card-btn {
            margin-top: auto;
            padding: 0.8rem 1.5rem;
            background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
            color: white;
            border: none;
            border-radius: 50px;
            font-weight: 600;
            text-align: center;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(220, 38, 38, 0.4);
        }
        
        .action-card:hover .action-card-btn {
            transform: scale(1.05);
            box-shadow: 0 6px 20px rgba(220, 38, 38, 0.6);
        }
        
        /* Featured Content */
        .featured-section {
            margin-bottom: 3rem;
            animation: fadeInUp 1s ease-out;
        }
        
        .featured-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
            gap: 2rem;
        }
        
        .featured-card {
            background: rgba(10, 22, 40, 0.8);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(96, 165, 250, 0.3);
            border-radius: 20px;
            overflow: hidden;
            transition: all 0.3s ease;
        }
        
        body.light-mode .featured-card {
            background: rgba(255, 255, 255, 0.9);
            border: 1px solid rgba(3, 105, 161, 0.3);
        }
        
        .featured-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 50px rgba(96, 165, 250, 0.4);
        }
        
        body.light-mode .featured-card:hover {
            box-shadow: 0 20px 50px rgba(14, 165, 233, 0.3);
        }
        
        .featured-image {
            width: 100%;
            height: 200px;
            background-size: cover;
            background-position: center;
            position: relative;
        }
        
        .featured-badge {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-size: 0.85rem;
            font-weight: 600;
            box-shadow: 0 4px 15px rgba(220, 38, 38, 0.5);
        }
        
        .featured-content {
            padding: 1.5rem;
        }
        
        .featured-content h3 {
            color: #93c5fd;
            font-size: 1.3rem;
            margin-bottom: 1rem;
            font-weight: 600;
        }
        
        body.light-mode .featured-content h3 {
            color: #0284c7;
        }
        
        .featured-content p {
            color: #bfdbfe;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }
        
        body.light-mode .featured-content p {
            color: #0369a1;
        }
        
        .featured-meta {
            display: flex;
            gap: 1.5rem;
            color: #93c5fd;
            font-size: 0.9rem;
        }
        
        body.light-mode .featured-meta {
            color: #0284c7;
        }
        
        .featured-meta span {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        /* Stats Dashboard */
        .stats-dashboard {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 2rem;
            margin-bottom: 3rem;
            animation: fadeInUp 1.2s ease-out;
        }
        
        .stat-card {
            background: rgba(10, 22, 40, 0.8);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(96, 165, 250, 0.3);
            border-radius: 20px;
            padding: 2rem;
            text-align: center;
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }
        
        body.light-mode .stat-card {
            background: rgba(255, 255, 255, 0.9);
            border: 1px solid rgba(3, 105, 161, 0.3);
        }
        
        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(135deg, #60a5fa 0%, #93c5fd 100%);
        }
        
        body.light-mode .stat-card::before {
            background: linear-gradient(135deg, #0284c7 0%, #0ea5e9 100%);
        }
        
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(96, 165, 250, 0.3);
        }
        
        .stat-icon {
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }
        
        .stat-number {
            font-size: 2.5rem;
            font-weight: 800;
            background: linear-gradient(135deg, #60a5fa 0%, #93c5fd 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.5rem;
        }
        
        body.light-mode .stat-number {
            background: linear-gradient(135deg, #0284c7 0%, #0ea5e9 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .stat-label {
            color: #93c5fd;
            font-size: 0.95rem;
            font-weight: 500;
        }
        
        body.light-mode .stat-label {
            color: #0284c7;
        }
        
        /* Responsive */
        @media (max-width: 968px) {
            .welcome-content {
                grid-template-columns: 1fr;
                text-align: center;
            }
            
            .welcome-illustration {
                margin: 0 auto;
            }
            
            .welcome-text h1 {
                font-size: 2rem;
            }
            
            .actions-grid {
                grid-template-columns: 1fr;
            }
            
            .featured-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}

