{% extends 'public/base.html.twig' %}

{% block title %}Stages - SmartPath{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-header {
            background: rgba(10, 22, 40, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(96, 165, 250, 0.3);
            border-radius: 20px;
            padding: 3rem 2rem;
            box-shadow: 0 8px 32px rgba(37, 99, 235, 0.3);
            margin-bottom: 3rem;
            animation: fadeInUp 0.6s ease-out;
            position: relative;
            overflow: hidden;
            transition: all 0.5s ease;
        }
        
        body.light-mode .page-header {
            background: rgba(255, 255, 255, 0.95);
            border: 2px solid rgba(3, 105, 161, 0.3);
            box-shadow: 0 4px 25px rgba(14, 165, 233, 0.2);
        }
        
        .page-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(96, 165, 250, 0.1), transparent);
            animation: shine 3s infinite;
        }
        
        @keyframes shine {
            0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
            100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
        }
        
        .page-header h2 {
            color: #e0f2fe;
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            position: relative;
            z-index: 1;
            background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            filter: drop-shadow(0 0 30px rgba(96, 165, 250, 0.5));
            transition: all 0.5s ease;
        }
        
        body.light-mode .page-header h2 {
            background: linear-gradient(135deg, #0284c7 0%, #0369a1 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            filter: drop-shadow(0 0 15px rgba(14, 165, 233, 0.3));
        }
        
        .page-header p {
            color: #bfdbfe;
            font-size: 1.1rem;
            position: relative;
            z-index: 1;
            transition: color 0.5s ease;
        }
        
        body.light-mode .page-header p {
            color: #0c4a6e;
            font-weight: 500;
        }
        
        .filter-tabs {
            display: flex;
            gap: 1rem;
            margin-top: 1.5rem;
            flex-wrap: wrap;
            position: relative;
            z-index: 1;
        }
        
        .filter-tab {
            padding: 0.7rem 1.5rem;
            border: 2px solid rgba(96, 165, 250, 0.3);
            border-radius: 25px;
            background: rgba(10, 22, 40, 0.5);
            color: #bfdbfe;
            cursor: pointer;
            transition: all 0.3s;
            font-weight: 500;
        }
        
        body.light-mode .filter-tab {
            border: 2px solid rgba(3, 105, 161, 0.3);
            background: rgba(224, 242, 254, 0.5);
            color: #0369a1;
        }
        
        .filter-tab:hover,
        .filter-tab.active {
            border-color: #3b82f6;
            background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(37, 99, 235, 0.4);
        }
        
        body.light-mode .filter-tab:hover,
        body.light-mode .filter-tab.active {
            border-color: #0ea5e9;
            background: linear-gradient(135deg, #0ea5e9 0%, #38bdf8 100%);
        }
        
        .stages-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
            gap: 2rem;
            margin-top: 2rem;
        }
        
        .stage-card {
            background: rgba(10, 22, 40, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(96, 165, 250, 0.2);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            cursor: pointer;
            animation: fadeInUp 0.6s ease-out backwards;
        }
        
        body.light-mode .stage-card {
            background: rgba(255, 255, 255, 0.95);
            border: 2px solid rgba(3, 105, 161, 0.2);
            box-shadow: 0 4px 20px rgba(14, 165, 233, 0.15);
        }
        
        .stage-card:nth-child(1) { animation-delay: 0.1s; }
        .stage-card:nth-child(2) { animation-delay: 0.2s; }
        .stage-card:nth-child(3) { animation-delay: 0.3s; }
        .stage-card:nth-child(4) { animation-delay: 0.4s; }
        .stage-card:nth-child(5) { animation-delay: 0.5s; }
        .stage-card:nth-child(6) { animation-delay: 0.6s; }
        
        .stage-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 15px 40px rgba(37, 99, 235, 0.5);
        }
        
        body.light-mode .stage-card:hover {
            box-shadow: 0 10px 35px rgba(14, 165, 233, 0.35);
        }
        
        /* Animation float pour les ic√¥nes (mouvement vertical simple) */
        @keyframes float-icon {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-8px);
            }
        }
        
        .stage-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.8rem;
            margin-bottom: 1rem;
            box-shadow: 0 0 20px rgba(37, 99, 235, 0.5);
            transition: all 0.5s ease;
            /* Animation douce et continue */
            animation: float-icon 2.5s ease-in-out infinite;
        }
        
        body.light-mode .stage-icon {
            background: linear-gradient(135deg, #0ea5e9 0%, #38bdf8 100%);
            box-shadow: 0 0 15px rgba(14, 165, 233, 0.4);
        }
        
        .stage-header {
            background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
            color: white;
            padding: 1.5rem;
            transition: all 0.5s ease;
        }
        
        body.light-mode .stage-header {
            background: linear-gradient(135deg, #0ea5e9 0%, #38bdf8 100%);
        }
        
        .stage-header h3 {
            font-size: 1.3rem;
            margin-bottom: 0.5rem;
        }
        
        .company-name {
            opacity: 0.9;
            font-size: 0.95rem;
        }
        
        .stage-body {
            padding: 1.5rem;
        }
        
        .stage-body p {
            color: #bfdbfe;
            line-height: 1.7;
            margin-bottom: 1rem;
            transition: color 0.5s ease;
        }
        
        body.light-mode .stage-body p {
            color: #334155;
        }
        
        .stage-details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            margin-top: 1rem;
        }
        
        .detail-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #93c5fd;
            font-size: 0.9rem;
            transition: color 0.5s ease;
        }
        
        body.light-mode .detail-item {
            color: #0369a1;
            font-weight: 500;
        }
        
        .stage-footer {
            padding: 1rem 1.5rem;
            background: rgba(37, 99, 235, 0.1);
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: background 0.5s ease;
        }
        
        body.light-mode .stage-footer {
            background: rgba(14, 165, 233, 0.08);
        }
        
        .stage-status {
            padding: 0.4rem 1rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
        }
        
        .status-available {
            background: linear-gradient(135deg, #16a34a 0%, #22c55e 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(22, 163, 74, 0.4);
        }
        
        .status-applied {
            background: linear-gradient(135deg, #d97706 0%, #f59e0b 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(217, 119, 6, 0.4);
        }
        
        .status-deadline {
            color: #f87171;
            font-size: 0.85rem;
        }
        
        @media (max-width: 768px) {
            .stages-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}

