{% extends 'base.html.twig' %}

{% block title %}SmartPath - Votre Parcours d'Excellence{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Hero Section */
        .hero-section {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: calc(100vh - 80px);
            padding: 2rem;
            position: relative;
            z-index: 1;
        }
        
        .hero-content {
            max-width: 1200px;
            width: 100%;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 4rem;
            align-items: center;
            animation: fadeInUp 0.8s ease-out;
        }
        
        .hero-text {
            text-align: left;
        }
        
        .hero-text h1 {
            font-size: 3.5rem;
            font-weight: 800;
            background: linear-gradient(135deg, #60a5fa 0%, #93c5fd 50%, #bfdbfe 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 1.5rem;
            line-height: 1.2;
            filter: drop-shadow(0 0 30px rgba(96, 165, 250, 0.6));
            animation: glow-pulse 3s infinite;
        }
        
        body.light-mode .hero-text h1 {
            background: linear-gradient(135deg, #0284c7 0%, #0369a1 50%, #075985 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            filter: drop-shadow(0 0 20px rgba(14, 165, 233, 0.4));
        }
        
        @keyframes glow-pulse {
            0%, 100% {
                filter: drop-shadow(0 0 30px rgba(96, 165, 250, 0.6));
            }
            50% {
                filter: drop-shadow(0 0 50px rgba(96, 165, 250, 0.9));
            }
        }
        
        .hero-text .subtitle {
            font-size: 1.3rem;
            color: #bfdbfe;
            margin-bottom: 2rem;
            line-height: 1.6;
            font-weight: 400;
        }
        
        body.light-mode .hero-text .subtitle {
            color: #0369a1;
        }
        
        .hero-text .description {
            font-size: 1.1rem;
            color: #93c5fd;
            margin-bottom: 2.5rem;
            line-height: 1.8;
        }
        
        body.light-mode .hero-text .description {
            color: #0284c7;
        }
        
        .cta-buttons {
            display: flex;
            gap: 1.5rem;
            flex-wrap: wrap;
        }
        
        .btn-primary, .btn-secondary {
            padding: 1.2rem 2.5rem;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 50px;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.8rem;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
        }
        
        .btn-primary {
            background: linear-gradient(135deg, #dc2626 0%, #ef4444 50%, #f87171 100%);
            color: white;
            animation: pulse-glow 2s infinite;
        }
        
        @keyframes pulse-glow {
            0%, 100% {
                box-shadow: 0 8px 30px rgba(220, 38, 38, 0.5);
            }
            50% {
                box-shadow: 0 8px 40px rgba(220, 38, 38, 0.8);
            }
        }
        
        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 40px rgba(220, 38, 38, 0.7);
        }
        
        .btn-secondary {
            background: rgba(96, 165, 250, 0.1);
            color: #60a5fa;
            border: 2px solid #60a5fa;
            backdrop-filter: blur(10px);
        }
        
        body.light-mode .btn-secondary {
            background: rgba(14, 165, 233, 0.1);
            color: #0284c7;
            border-color: #0284c7;
        }
        
        .btn-secondary:hover {
            background: rgba(96, 165, 250, 0.2);
            transform: translateY(-3px);
            box-shadow: 0 12px 40px rgba(96, 165, 250, 0.4);
        }
        
        body.light-mode .btn-secondary:hover {
            background: rgba(14, 165, 233, 0.2);
            box-shadow: 0 12px 40px rgba(14, 165, 233, 0.3);
        }
        
        /* Hero Image */
        .hero-image {
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .hero-image-container {
            position: relative;
            width: 100%;
            max-width: 500px;
            aspect-ratio: 1;
            border-radius: 30px;
            overflow: hidden;
            box-shadow: 0 20px 60px rgba(96, 165, 250, 0.4);
            animation: float-image 6s ease-in-out infinite;
        }
        
        body.light-mode .hero-image-container {
            box-shadow: 0 20px 60px rgba(14, 165, 233, 0.3);
        }
        
        @keyframes float-image {
            0%, 100% {
                transform: translateY(0) rotate(0deg);
            }
            25% {
                transform: translateY(-20px) rotate(2deg);
            }
            50% {
                transform: translateY(0) rotate(0deg);
            }
            75% {
                transform: translateY(-10px) rotate(-2deg);
            }
        }
        
        .hero-image-container::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(96, 165, 250, 0.3), transparent);
            animation: shimmer 3s infinite;
        }
        
        @keyframes shimmer {
            0% {
                transform: translateX(-100%) translateY(-100%) rotate(45deg);
            }
            100% {
                transform: translateX(100%) translateY(100%) rotate(45deg);
            }
        }
        
        .hero-image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            position: relative;
            z-index: 1;
        }
        
        /* Features Section */
        .features-section {
            padding: 6rem 2rem;
            position: relative;
            z-index: 1;
        }
        
        .features-container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .section-title {
            text-align: center;
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #60a5fa 0%, #93c5fd 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 3rem;
            filter: drop-shadow(0 0 20px rgba(96, 165, 250, 0.5));
        }
        
        body.light-mode .section-title {
            background: linear-gradient(135deg, #0284c7 0%, #0369a1 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            filter: drop-shadow(0 0 15px rgba(14, 165, 233, 0.3));
        }
        
        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-top: 4rem;
        }
        
        .feature-card {
            background: rgba(10, 22, 40, 0.8);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(96, 165, 250, 0.3);
            border-radius: 20px;
            padding: 2.5rem;
            transition: all 0.3s ease;
            animation: fadeInUp 0.6s ease-out backwards;
            position: relative;
            overflow: hidden;
        }
        
        body.light-mode .feature-card {
            background: rgba(255, 255, 255, 0.9);
            border: 1px solid rgba(3, 105, 161, 0.3);
        }
        
        .feature-card:nth-child(1) { animation-delay: 0.1s; }
        .feature-card:nth-child(2) { animation-delay: 0.2s; }
        .feature-card:nth-child(3) { animation-delay: 0.3s; }
        
        .feature-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(135deg, #60a5fa 0%, #93c5fd 100%);
            transform: scaleX(0);
            transition: transform 0.3s ease;
        }
        
        body.light-mode .feature-card::before {
            background: linear-gradient(135deg, #0284c7 0%, #0ea5e9 100%);
        }
        
        .feature-card:hover::before {
            transform: scaleX(1);
        }
        
        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 50px rgba(96, 165, 250, 0.4);
            border-color: #60a5fa;
        }
        
        body.light-mode .feature-card:hover {
            box-shadow: 0 20px 50px rgba(14, 165, 233, 0.3);
            border-color: #0284c7;
        }
        
        .feature-icon {
            font-size: 3rem;
            margin-bottom: 1.5rem;
            display: inline-block;
            filter: drop-shadow(0 0 10px rgba(96, 165, 250, 0.6));
            animation: icon-float 3s ease-in-out infinite;
        }
        
        @keyframes icon-float {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-10px);
            }
        }
        
        .feature-card h3 {
            color: #93c5fd;
            font-size: 1.5rem;
            margin-bottom: 1rem;
            font-weight: 600;
        }
        
        body.light-mode .feature-card h3 {
            color: #0284c7;
        }
        
        .feature-card p {
            color: #bfdbfe;
            line-height: 1.8;
            font-size: 1rem;
        }
        
        body.light-mode .feature-card p {
            color: #0369a1;
        }
        
        /* Stats Section */
        .stats-section {
            padding: 4rem 2rem;
            background: rgba(37, 99, 235, 0.1);
            backdrop-filter: blur(10px);
            border-top: 1px solid rgba(96, 165, 250, 0.3);
            border-bottom: 1px solid rgba(96, 165, 250, 0.3);
            position: relative;
            z-index: 1;
        }
        
        body.light-mode .stats-section {
            background: rgba(14, 165, 233, 0.05);
            border-color: rgba(3, 105, 161, 0.3);
        }
        
        .stats-container {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 3rem;
        }
        
        .stat-item {
            text-align: center;
            animation: fadeInUp 0.8s ease-out backwards;
        }
        
        .stat-item:nth-child(1) { animation-delay: 0.2s; }
        .stat-item:nth-child(2) { animation-delay: 0.3s; }
        .stat-item:nth-child(3) { animation-delay: 0.4s; }
        .stat-item:nth-child(4) { animation-delay: 0.5s; }
        
        .stat-number {
            font-size: 3rem;
            font-weight: 800;
            background: linear-gradient(135deg, #60a5fa 0%, #93c5fd 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 0.5rem;
            filter: drop-shadow(0 0 20px rgba(96, 165, 250, 0.6));
        }
        
        body.light-mode .stat-number {
            background: linear-gradient(135deg, #0284c7 0%, #0ea5e9 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            filter: drop-shadow(0 0 15px rgba(14, 165, 233, 0.4));
        }
        
        .stat-label {
            color: #93c5fd;
            font-size: 1.1rem;
            font-weight: 500;
        }
        
        body.light-mode .stat-label {
            color: #0284c7;
        }
        
        /* CTA Section */
        .cta-section {
            padding: 6rem 2rem;
            text-align: center;
            position: relative;
            z-index: 1;
        }
        
        .cta-content {
            max-width: 800px;
            margin: 0 auto;
            animation: fadeInUp 0.8s ease-out;
        }
        
        .cta-content h2 {
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(135deg, #60a5fa 0%, #93c5fd 100%);
