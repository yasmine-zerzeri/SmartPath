{% extends 'base.html.twig' %}

{% block title %}Connexion - SmartPath{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .auth-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: calc(100vh - 80px);
            padding: 2rem;
            position: relative;
            z-index: 1;
        }
        
        .auth-box {
            background: rgba(10, 22, 40, 0.9);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(96, 165, 250, 0.3);
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(37, 99, 235, 0.4);
            width: 100%;
            max-width: 500px;
            padding: 3.5rem;
            animation: fadeInUp 0.6s ease-out;
            transition: all 0.5s ease;
        }
        
        body.light-mode .auth-box {
            background: rgba(255, 255, 255, 0.95);
            border: 1px solid rgba(3, 105, 161, 0.3);
            box-shadow: 0 10px 40px rgba(14, 165, 233, 0.3);
        }
        
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .logo-container {
            text-align: center;
            margin-bottom: 2rem;
        }
        
        .logo-container img {
            height: 80px;
            width: auto;
            margin-bottom: 1rem;
            filter: drop-shadow(0 0 20px rgba(96, 165, 250, 0.6));
            transition: filter 0.5s ease;
        }
        
        body.light-mode .logo-container img {
            filter: drop-shadow(0 0 20px rgba(14, 165, 233, 0.4));
        }
        
        .auth-box h1 {
            background: linear-gradient(135deg, #60a5fa 0%, #93c5fd 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-align: center;
            margin-bottom: 0.5rem;
            font-size: 2rem;
            filter: drop-shadow(0 0 20px rgba(96, 165, 250, 0.5));
            transition: all 0.5s ease;
        }
        
        body.light-mode .auth-box h1 {
            background: linear-gradient(135deg, #0284c7 0%, #0369a1 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            filter: drop-shadow(0 0 15px rgba(14, 165, 233, 0.3));
        }
        
        .auth-box p {
            text-align: center;
            color: #bfdbfe;
            margin-bottom: 2rem;
            transition: color 0.5s ease;
        }
        
        body.light-mode .auth-box p {
            color: #0369a1;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: #93c5fd;
            font-weight: 500;
            transition: color 0.5s ease;
        }
        
        body.light-mode .form-group label {
            color: #0284c7;
        }
        
        .form-group input {
            width: 100%;
            padding: 0.9rem;
            border: 2px solid rgba(96, 165, 250, 0.3);
            background: rgba(37, 99, 235, 0.1);
            border-radius: 10px;
            font-size: 1rem;
            transition: all 0.3s;
            color: #e0f2fe;
        }
        
        body.light-mode .form-group input {
            border: 2px solid rgba(3, 105, 161, 0.3);
            background: rgba(224, 242, 254, 0.5);
            color: #0c4a6e;
        }
        
        .form-group input::placeholder {
            color: #93c5fd;
            opacity: 0.5;
            transition: color 0.5s ease;
        }
        
        body.light-mode .form-group input::placeholder {
            color: #0284c7;
            opacity: 0.6;
        }
        
        .form-group input:focus {
            outline: none;
            border-color: #60a5fa;
            background: rgba(37, 99, 235, 0.15);
            box-shadow: 0 0 20px rgba(96, 165, 250, 0.3);
        }
        
        body.light-mode .form-group input:focus {
            border-color: #0ea5e9;
            background: rgba(224, 242, 254, 0.8);
            box-shadow: 0 0 20px rgba(14, 165, 233, 0.2);
        }
        
        .form-options {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }
        
        .remember-me {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: #bfdbfe;
            font-size: 0.9rem;
        }
        
        body.light-mode .remember-me {
            color: #0369a1;
        }
        
        .remember-me input[type="checkbox"] {
            width: auto;
            cursor: pointer;
        }
        
        .forgot-password {
            color: #60a5fa;
            text-decoration: none;
            font-size: 0.9rem;
            transition: color 0.3s ease;
        }
        
        body.light-mode .forgot-password {
            color: #0284c7;
        }
        
        .forgot-password:hover {
            text-decoration: underline;
        }
        
        .btn {
            width: 100%;
            padding: 1.1rem;
            background: linear-gradient(135deg, #dc2626 0%, #ef4444 50%, #f87171 100%);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            box-shadow: 0 4px 20px rgba(220, 38, 38, 0.5);
            animation: pulse-btn 2s infinite;
        }
        
        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 30px rgba(220, 38, 38, 0.7);
        }
        
        @keyframes pulse-btn {
            0%, 100% {
                box-shadow: 0 4px 20px rgba(220, 38, 38, 0.5);
            }
            50% {
                box-shadow: 0 4px 25px rgba(220, 38, 38, 0.7);
            }
        }
        
        .toggle-form {
            text-align: center;
            margin-top: 1.5rem;
            color: #bfdbfe;
            transition: color 0.5s ease;
        }
        
        body.light-mode .toggle-form {
            color: #0369a1;
        }
        
        .toggle-form a {
            background: linear-gradient(135deg, #3b82f6 0%, #60a5fa 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.5s ease;
        }
        
        body.light-mode .toggle-form a {
            background: linear-gradient(135deg, #0284c7 0%, #0369a1 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .toggle-form a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-box">
        <div class="logo-container">
            <img src="{{ asset('images/logo.png') }}" alt="SmartPath Logo">
        </div>
        <h1>SmartPath</h1>
        <p>Connectez-vous pour continuer</p>
        
        <form method="post" action="{{ path('public_home') }}">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="votre@email.com" required>
            </div>
            
            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="password" placeholder="••••••••" required>
            </div>
            
            <div class="form-options">
                <label class="remember-me">
                    <input type="checkbox" name="remember">
                    <span>Se souvenir de moi</span>
                </label>
                <a href="#" class="forgot-password">Mot de passe oublié?</a>
            </div>
            
            <button type="submit" class="btn">Se connecter</button>
        </form>
        
        <div class="toggle-form">
            Pas encore de compte ? <a href="{{ path('public_signup') }}">S'inscrire</a>
        </div>
    </div>
</div>
{% endblock %}
